#!/bin/bash

BUILD_DIR=$1
INSTALL_DIR=$BUILD_DIR/vendor
PROFILE_DIR=$BUILD_DIR/.profile.d
VERSION=4.03
PACKAGE_URL="https://dl.xpdfreader.com/xpdf-tools-linux-$VERSION.tar.gz"

echo ""
echo "-----> Installing xpdf $VERSION"
echo ""

mkdir -p $INSTALL_DIR
cd $INSTALL_DIR
curl $PACKAGE_URL -s | tar xz
mkdir -p $INSTALL_DIR/xpdf/bin
mv xpdf-tools-linux-$VERSION/bin64/* $INSTALL_DIR/xpdf/bin
rm -rf xpdf-tools-linux-$VERSION

echo "-----> Creating runtime environment"
echo ""

mkdir -p $PROFILE_DIR
echo "export PATH=\"\$HOME/vendor/pdftotext/bin:\$PATH\"" >> $PROFILE_DIR/pdftotext.sh

echo "-----> Done."
echo ""
